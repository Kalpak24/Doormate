<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rl_1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/lightpurple"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/owner_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/dark_purple"
            android:fontFamily="@font/josefinsanssemibold"
            android:padding="20dp"
            android:drawableStart="@drawable/baseline_hdr_strong_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/dark_purple"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>