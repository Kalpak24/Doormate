<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TermsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/baseline_arrow_back_24nav" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="sans-serif-condensed"
            android:text="Terms of Use"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/help1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_350sdp"

            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="sans-serif-condensed"
            android:text="Help"
            android:textColor="@color/blue"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help1"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Hello, ðŸ˜Š"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hello"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Before you create an account ,please read and accept terms and conditions"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/before"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:tint="@color/dark_purple"

            />

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/before"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Terms and Condition"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/terms"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Last Updated:Yesterday"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptiont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="25dp"
            android:padding="@dimen/_10sdp"
            android:text="These terms and conditions outline the rules and regulations for the use of Company Name\'s Website, located at Website.com. By accessing this website we assume you accept these terms and conditions. Do not continue to use Website Name if you do not agree to take all of the terms and conditions stated on this page. The following terminology applies to these Terms and Conditions, Privacy Statement and Disclaimer Notice and all Agreements: Client, You and Your refers to you, the person log on this website and compliant to the Company\'s terms and conditions. The Company, Ourselves, We, Our and india, refers to our Company. Party, Parties, or india, refers to both the Client and ourselves."
            android:textSize="@dimen/_14sdp" />

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_2sdp"-->
<!--            android:layout_below="@id/descriptiont"-->
<!--            android:layout_marginStart="@dimen/_12sdp"-->
<!--            android:layout_marginTop="@dimen/_12sdp"-->
<!--            android:layout_marginEnd="@dimen/_12sdp"-->
<!--            android:layout_marginBottom="@dimen/_8sdp"-->
<!--            android:background="@color/black" />-->

    </RelativeLayout>

</ScrollView>