<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StudentMessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Find Your"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/perfect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Taste"
            android:textSize="30dp"
            android:textStyle="bold" />

        <SearchView
            android:id="@+id/search_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/perfect"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/seach_bg"
            android:iconifiedByDefault="false"
            android:queryHint="Search Rooms" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_mess"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </LinearLayout>

</FrameLayout>
