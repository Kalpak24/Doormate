<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Find Your"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/perfect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="Perfect Room"
                android:textSize="30dp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/search_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/perfect"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/seach_bg"
                android:iconifiedByDefault="false"
                android:queryHint="Search Rooms"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/advertise"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/search_room"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/imageCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:autoPlay="true"
                    app:autoPlayDelay="5000"
                    app:autoWidthFixing="true"
                    app:infiniteCarousel="true"
                    app:scaleOnScroll="true"
                    app:scalingFactor="0.15"
                    app:showIndicator="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/advertise"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Nearby Rooms"
                android:textSize="14dp"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/seeall"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/advertise"-->
<!--                android:layout_marginLeft="300dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:gravity="center"-->
<!--                android:text="SEE ALL"-->
<!--                android:textColor="@color/red"-->
<!--                android:textSize="14dp"-->
<!--                android:textStyle="bold" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nearby"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

