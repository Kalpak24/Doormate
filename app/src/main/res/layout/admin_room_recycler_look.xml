<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/lightpurple1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/lightpurple1">

            <!-- Apartment Image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/apartmentImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_123sdp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/show_room_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_123sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/house" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Apartment Details -->
            <TextView
                android:id="@+id/show_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/apartmentImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Rosewood Green Apt."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_room_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!-- Bedrooms Icon and Text -->
                <ImageView
                    android:id="@+id/bedroomIcon"
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    android:contentDescription="Bedrooms"
                    android:src="@drawable/baseline_bedroom_parent_24"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/show_room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="3 BHK"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:background="#CCCCCC" />

                <!-- Area Icon and Text -->
                <ImageView
                    android:id="@+id/priceIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Area"
                    android:src="@drawable/baseline_currency_rupee_24"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/show_room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="15,000"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- Divider -->
<!--                <View-->
<!--                    android:layout_width="1dp"-->
<!--                    android:layout_height="16dp"-->
<!--                    android:layout_marginStart="8dp"-->
<!--                    android:background="#CCCCCC" />-->

                <!-- Location Icon and Text -->
<!--                <ImageView-->
<!--                    android:id="@+id/locationIcon"-->
